<?xml version="1.0" encoding="utf-8"?>
<com.mboudraa.thescore.ui.detail.RosterRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/list_vertical_divider"
    android:orientation="horizontal"
    android:showDividers="middle">

    <TextView
        android:id="@+id/roster_row_nb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        tools:text="NO." />

    <TextView
        android:id="@+id/roster_row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="8dp"
        tools:text="NAME" />

    <TextView
        android:id="@+id/roster_row_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        tools:text="POS" />

</com.mboudraa.thescore.ui.detail.RosterRow>

